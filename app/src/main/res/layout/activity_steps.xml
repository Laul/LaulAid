<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Detailed_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detailedmodule_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/grey_primary"
        android:minHeight="?attr/actionBarSize"
        android:outlineAmbientShadowColor="@color/grey_secondary"
        android:outlineSpotShadowColor="@color/grey_primary"
        android:theme="?attr/actionBarTheme"
        app:subtitle="Blood Glucose"
        app:subtitleTextColor="@color/red_secondary"
        app:title="LaulAid"
        app:titleTextColor="@color/grey_secondary"
        tools:layout_editor_absoluteX="1dp"
        android:elevation="4dp"
        android:layout = "@menu/toolbar"
        >

    </androidx.appcompat.widget.Toolbar>

