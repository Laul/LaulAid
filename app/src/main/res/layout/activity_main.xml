<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonRequest2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="#414af4"
        android:text="Click Here To Send HTTP Request To Server And See Response Displayed As Toast"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/httpText" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <com.klim.tcharts.TChart
                android:id="@+id/graph_gluco"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                app:backgroundColor="#FFFFFF"
                app:detailDivisionColor="#efeff0"
                app:detailLabelsFontColor="#506372"
                app:detailLineSelectedPosition="#73C9D8E3"
                app:infoWindowBackground="#FFFFFFFF"
                app:infoWindowShadowColor="#5C000000"
                app:infoWindowTitleColor="#222222"
                app:navBordersColor="#477DA9CA"
                app:navViewFillColor="#BAF5F8F9"
                app:showTitle="true"
                app:title="Title"
                app:titleFontColor="#3896D4"
                app:titleFontSize="16dp"
                />

            <com.klim.tcharts.TChart
                android:id="@+id/graph_steps"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                app:backgroundColor="#FFFFFF"
                app:detailDivisionColor="#efeff0"
                app:detailLabelsFontColor="#506372"
                app:detailLineSelectedPosition="#73C9D8E3"
                app:infoWindowBackground="#FFFFFFFF"
                app:infoWindowShadowColor="#5C000000"
                app:infoWindowTitleColor="#222222"
                app:navBordersColor="#477DA9CA"
                app:navViewFillColor="#BAF5F8F9"
                app:showTitle="true"
                app:title="Title"
                app:titleFontColor="#3896D4"
                app:titleFontSize="16dp"
                />


        </LinearLayout>

    </ScrollView>


</LinearLayout>
